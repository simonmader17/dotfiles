[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-right = 0
margin-bottom = 0
margin-left = 0

[colors]
background = ${xrdb:background-transparent}
background-alt = ${xrdb:color8}
foreground = ${xrdb:foreground}
color1 = ${xrdb:color1}
color2 = ${xrdb:color2}
color3 = ${xrdb:color3}
color4 = ${xrdb:color4}
color5 = ${xrdb:color5}
color6 = ${xrdb:color6}
alert = #f00

[bar/base]
monitor = ${env:MONITOR:}
width = 100%
height = 27

background = ${colors.color6}
foreground = ${colors.foreground}

line-size = 3

font-0 = "CaskaydiaCove Nerd Font:size=11;1"
# For emojis:
font-1 = "Noto Color Emoji:scale=10"
# For ascii characters:
# font-2 = unifont:fontformat=truetype:size=11:heavy;-2
font-2 = DejaVu Sans;size=11

enable-ipc = true

tray-position = right
tray-background = ${colors.background}

wm-restack = i3

cursor-click = pointer
cursor-scroll = ns-resize

################################################################################
# TOP BAR
################################################################################
[bar/top]
inherit = bar/base

modules-left = i3 before-xwindow xwindow
modules-right = fs-root fs-d fs-f fs-p audiodevice pulseaudio memory gpu cpu temperature nordvpn wireless-icon wired-icon my-network my-network-updates wireless-speeds wired-speeds battery date

################################################################################
# TOP BAR ON SMALL SCREENS
################################################################################
[bar/top-small]
inherit = bar/base

modules-left = i3 before-xwindow xwindow
modules-right = xkeyboard audiodevice pulseaudio memory gpu cpu temperature battery date

################################################################################
# BOTTOM BAR ON SMALL SCREENS
################################################################################
[bar/bottom-small]
inherit = bar/base
bottom = true

background = ${colors.background}

modules-left = fs-root fs-d fs-f fs-p spotify
modules-right = nordvpn wireless-icon wired-icon my-network my-network-updates wireless-speeds wired-speeds

################################################################################
# MODULES
################################################################################

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true

# Only show workspaces on the same output as the bar
pin-workspaces = true

# unfocused = Inactive workspace on focused monitor
label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-background = ${colors.background}

# focused = Active workspace on focused monitor
label-focused = %index%
label-focused-padding = 1
label-focused-background = ${colors.color6}

# visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-padding = ${self.label-focused-padding}
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}

# urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

# mode = Active mode on any monitor
label-mode = %mode%
label-mode-padding = 1
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.color2}

