[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.color2}
animation-charging-0 = "󰁺 󰉁"
animation-charging-1 = "󰁼 󰉁"
animation-charging-2 = "󰁾 󰉁"
animation-charging-3 = "󰂀 󰉁"
animation-charging-4 = "󰁹 󰉁"
animation-charging-framerate = 750
label-charging = %percentage%%

format-discharging = <animation-discharging> <label-discharging>
format-discharging-foreground = ${colors.color2}
animation-discharging-0 = "󰁹"
animation-discharging-1 = "󰂀"
animation-discharging-2 = "󰁾"
animation-discharging-3 = "󰁼"
animation-discharging-4 = "󰁺"
animation-discharging-framerate = 2500
label-discharging = %percentage%% (%consumption%)

format-full = <label-full>
format-full-foreground = ${colors.color2}
label-full = 󰁹 %percentage%%

################################################################################

[module/date]
type = internal/date
interval = 1

format = <label>
format-foreground = ${colors.color3}
label = 󰃭 %time% %date%

date = %d.%m.%Y
date-alt = %Y-%m-%d
time = %H:%M
time-alt = %H:%M:%S

################################################################################

[module/spotify]
type = custom/script
interval = 1
format-prefix = "󰝚 "
format = <label>
exec = python3 ~/dotfiles/polybar/spotify_status.py -f '{song} - {artist}'
format-underline = ${colors.color2}
# control players (optional)
click-left = playerctl --player=spotify play-pause
click-right = playerctl --player=spotify next
click-middle = playerctl --player=spotify previous

