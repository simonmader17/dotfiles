label-volume = %percentage%%

ramp-volume-0 = 󰕿
ramp-volume-1 = 󰖀
ramp-volume-2 = 󰕾

format-muted = 󰝟 <label-muted>
format-muted-background = ${colors.color2}
format-muted-padding = 1
label-muted = Muted

################################################################################

[module/memory]
type = internal/memory
interval = 2
label = 󰍛 %gb_used% / %gb_total% (%percentage_used%%)
