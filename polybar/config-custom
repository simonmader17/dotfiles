[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-right = 0
margin-bottom = 0
margin-left = 0

[colors]
background = ${xrdb:color0transparent}
background-alt = ${xrdb:color8}
foreground = ${xrdb:foreground}
color1 = ${xrdb:color1}
color2 = ${xrdb:color2}
color3 = ${xrdb:color3}
color4 = ${xrdb:color4}
color5 = ${xrdb:color5}
color6 = ${xrdb:color6}
alert = #f00

[bar/base]
monitor = ${env:MONITOR:}
width = 100%
height = 27

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = "CaskaydiaCove Nerd Font:size=11;1"

enable-ipc = true

tray-position = right
tray-padding = 2

wm-restack = i3

cursor-click = pointer
cursor-scroll = ns-resize

################################################################################
# TOP BAR
################################################################################
[bar/top]
inherit = bar/base

modules-left = i3 xwindow
modules-right = fs-root fs-d fs-f fs-p audiodevice pulseaudio memory gpu cpu temperature nordvpn wireless-icon wired-icon my-network wireless-speeds wired-speeds battery date

################################################################################
# TOP BAR ON SMALL SCREENS
################################################################################
[bar/top-small]
inherit = bar/base

modules-left = i3 xwindow
modules-right = xkeyboard audiodevice pulseaudio memory gpu cpu temperature battery date

################################################################################
# BOTTOM BAR ON SMALL SCREENS
################################################################################
[bar/bottom-small]
inherit = bar/base
bottom = true
padding-left = 1

modules-left = fs-root fs-d fs-f fs-p spotify
modules-right = nordvpn wireless-icon wired-icon my-network wireless-speeds wired-speeds

################################################################################
# MODULES
################################################################################

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true

# Only show workspaces on the same output as the bar
pin-workspaces = true

# unfocused = Inactive workspace on focused monitor
label-unfocused = %index%
label-unfocused-padding = 1

# focused = Active workspace on focused monitor
label-focused = %index%
label-focused-padding = 2
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.color2}

# visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-padding = ${self.label-focused-padding}
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}

# urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.color3}
label-urgent-padding = 2

# mode = Active mode on any monitor
label-mode = %mode%
label-mode-padding = 1
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.color2}

################################################################################

[module/xwindow]
type = internal/xwindow
label = %title:0:21:...%
label-foreground = ${colors.foreground}

################################################################################

[module/xkeyboard]
type = internal/xkeyboard

format = <label-indicator>

label-indicator = "%icon% "

indicator-icon-0 = caps lock;;󰪛
indicator-icon-1 = num lock;;󰎸

label-indicator-on-capslock = "%icon% +CL"
label-indicator-on-capslock-padding = 1
label-indicator-on-capslock-background = ${colors.color6}

label-indicator-on-numlock = "%icon% +NL"
label-indicator-on-numlock-padding = 1
label-indicator-on-numlock-background = ${colors.color6}

################################################################################

[module/filesystem]
type = internal/fs
interval = 25

label-mounted = 󰋊 %mountpoint%: %free% free
label-mounted-foreground = ${colors.color1}
label-unmounted = ""

[module/fs-root]
inherit = module/filesystem
mount-0 = /
label-mounted = 󰋊 /: %free% free

[module/fs-d]
inherit = module/filesystem
mount-0 = /mnt/d
label-mounted = 󰋊 d: %free% free

[module/fs-f]
inherit = module/filesystem
mount-0 = /mnt/f
label-mounted = 󰋊 f: %free% free

[module/fs-p]
inherit = module/filesystem
mount-0 = /mnt/p
label-mounted = 󰋊 p: %free% free

################################################################################

[module/audiodevice]
type = custom/ipc
hook-0 = ~/.config/polybar/audiodevice.sh 2> /dev/null
initial = 1
format = 󰓃 <output>
format-foreground = ${colors.color2}
click-left = fish ~/.config/i3/pactl-switch-sink.sh && polybar-msg hook audiodevice 1

################################################################################

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
