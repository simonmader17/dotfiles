// ██╔████╔██║██║   ██║██║  ██║██║   ██║██║     █████╗  ███████╗
// ██║╚██╔╝██║██║   ██║██║  ██║██║   ██║██║     ██╔══╝  ╚════██║
// ██║ ╚═╝ ██║╚██████╔╝██████╔╝╚██████╔╝███████╗███████╗███████║
// ╚═╝     ╚═╝ ╚═════╝ ╚═════╝  ╚═════╝ ╚══════╝╚══════╝╚══════╝
{
	// Left modules
	"hyprland/workspaces": {},

	// Center modules
	"hyprland/window": {
		"max-length": 50,
		"rewrite": {
			"(.*) - Brave": "🌍 $1",
			"(.*) - Visual Studio Code": "&lt;/&gt; $1"
		}
	},

	// Right modules
	"tray": {
		"spacing": 5
	},
	"custom/disks": {
		"format": "",
		"interval": 60,
		"exec": "~/dotfiles/waybar/themes/theme1/scripts/custom-disks.sh",
		"exec-if": "exit 0" // always run
	},
	"wireplumber": {
		"format": "{volume}% {icon}",
		"format-icons": ["", "", ""],
		"format-muted": "Muted "
	},
	"memory": {
		"format": "{percentage}% "
	},
	"cpu": {
		"format": "{usage}% "
	},
	"temperature": {
		"format": "{temperatureC}°C {icon}",
		"format-icons": ["", "", "", "", ""]
	},
	"network": {
		"interval": 3,
		"format-ethernet": "{icon}",
		"format-wifi": "{icon}",
		"format-icons": {
			"ethernet": [""],
			"wifi": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"]
		},
		"format-disconnected": "Disconnected 󰤮",
		"tooltip-format-ethernet": "IP-Address: {ipaddr}\nCurrent Download: {bandwidthDownBytes}\nCurrent Upload: {bandwidthUpBytes}",
		"tooltip-format-wifi": "{essid}\nIP-Address: {ipaddr}\nCurrent Download: {bandwidthDownBytes}\nCurrent Upload: {bandwidthUpBytes}\nSignal Strength: {signalStrength}"
	},
	"battery": {
		"interval": 15,
		"states": {
			"critical": 15
		},
		"format": "{capacity}% {icon}",
		"format-icons": ["", "", "", "", ""],
		"format-charging": "{capacity}% {icon}",
		"tooltip-format": "{timeTo}\nPower Draw: {power}W\nCharge Cycles: {cycles}\nHealth: {health}%"
	},
	"clock": {
		"interval": 1,
		"format": "{:%H:%M 󰥔 %d.%m.%Y }",
		"format-alt": "{:%H:%M:%S 󰥔 %Y-%m-%d }",
		"tooltip-format": "{calendar}",
		"calendar": {
			"mode": "month",
			"weeks-pos": "right",
			"format": {
				"today": "<span color='#F6F7C4'><b>{}</b></span>",
				"weeks": "<span color='grey'><b>KW{}</b></span>"
			}
		}
	}
}
// vim:ft=jsonc
